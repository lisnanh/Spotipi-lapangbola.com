<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <title>SPOTIPI</title>
  <style>
    body {
      padding-left: 16rem; /* 64 (w-64) / 4 = 16rem */
    }
    .carousel {
      display: flex;
      transition: transform 1s ease-in-out;
    }
    .carousel-inner {
      display: flex;
      overflow: hidden;
    }
  </style>

  <div class="p-4 flex flex-col items-center justify-center">
    <div class="w-full max-w-4xl">
      <div class="carousel-inner relative">
        <div class="carousel w-full flex">
          <!-- Slide 1 -->
          <div class="w-full flex-shrink-0">
            <div class="relative">
              <img src="https://via.placeholder.com/1200x500/3498db/ffffff?text=Image+1" alt="Image 1" class="w-full">
              <div class="absolute top-0 left-0 w-full h-full bg-blue-900 bg-opacity-50 flex items-center justify-center">
                <h2 class="text-4xl font-bold text-white">Welcome to SPOTIPI</h2>
              </div>
            </div>
          </div>
          <!-- Slide 2 -->
          <div class="w-full flex-shrink-0">
            <div class="relative">
              <img src="https://via.placeholder.com/1200x500/2ecc71/ffffff?text=Image+2" alt="Image 2" class="w-full">
              <div class="absolute top-0 left-0 w-full h-full bg-blue-900 bg-opacity-50 flex items-center justify-center">
                <h2 class="text-4xl font-bold text-white">Your Favorite Music</h2>
              </div>
            </div>
          </div>
          <!-- Slide 3 -->
          <div class="w-full flex-shrink-0">
            <div class="relative">
              <img src="https://via.placeholder.com/1200x500/e74c3c/ffffff?text=Image+3" alt="Image 3" class="w-full">
              <div class="absolute top-0 left-0 w-full h-full bg-blue-900 bg-opacity-50 flex items-center justify-center">
                <h2 class="text-4xl font-bold text-white">Discover New Artists</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flex justify-center mt-4">
        <button class="px-4 py-2 bg-blue-700 text-white rounded-l" onclick="prevSlide()">Previous</button>
        <button class="px-4 py-2 bg-blue-700 text-white rounded-r" onclick="nextSlide()">Next</button>
      </div>
    </div>
  </div>

  <script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel > div');
    const totalSlides = slides.length;

    function showSlide(index) {
      const carousel = document.querySelector('.carousel');
      if (index >= totalSlides) {
        currentSlide = 0;
      } else if (index < 0) {
        currentSlide = totalSlides - 1;
      } else {
        currentSlide = index;
      }
      carousel.style.transform = `translateX(-${currentSlide * 100}%)`;
    }

    function nextSlide() {
      showSlide(currentSlide + 1);
    }

    function prevSlide() {
      showSlide(currentSlide - 1);
    }

    document.addEventListener('DOMContentLoaded', () => {
      showSlide(0);
    });
  </script>
</body>
</html>