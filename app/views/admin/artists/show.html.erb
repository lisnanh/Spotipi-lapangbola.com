<div class="w-full p-6 bg-blue-100">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 mb-5 text-green-700 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-6 border border-blue-200">
    <h1 class="text-4xl font-extrabold text-blue-700 mb-4"><%= @artist.name %></h1>

    <div class="mb-6">
      <p class="mt-2 text-gray-800"><strong class="text-blue-500">Name:</strong> <%= @artist.name %></p>
      <p class="mt-2 text-gray-800"><strong class="text-blue-500">Year:</strong> <%= @artist.year %></p>
      <p class="mt-2 text-gray-800"><strong class="text-blue-500">Nationality:</strong> <%= @artist.nationality %></p>
      <p class="mt-2 text-gray-800"><strong class="text-blue-500">Biography:</strong> <%= @artist.biography %></p>
      <!-- Add any other details you have about the artist -->
    </div>

    <div class="flex flex-wrap gap-4 mt-4">
      <%= link_to "Edit this artist", edit_artist_path(@artist), class: "rounded-lg py-3 px-6 bg-teal-500 text-white font-medium hover:bg-teal-600 transition-colors duration-300 shadow-lg" %>
      <%= link_to "Back to artists", artists_path, class: "rounded-lg py-3 px-6 bg-yellow-500 text-white font-medium hover:bg-yellow-600 transition-colors duration-300 shadow-lg" %>
      <%= button_to "Destroy this artist", @artist, method: :delete, class: "rounded-lg py-3 px-6 bg-red-500 text-white font-medium hover:bg-red-600 transition-colors duration-300 shadow-lg", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
