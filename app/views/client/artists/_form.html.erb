<%= form_with(model: artist, class: "contents") do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>
      <ul>
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "text-blue-700 font-medium" %>
    <%= form.text_field :name, class: "block shadow-md rounded-md border border-blue-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="my-5">
    <%= form.label :year, class: "text-blue-700 font-medium" %>
    <%= form.date_field :year, class: "block shadow-md rounded-md border border-blue-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="my-5">
    <%= form.label :nationality, class: "text-blue-700 font-medium" %>
    <%= form.text_field :nationality, class: "block shadow-md rounded-md border border-blue-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="my-5">
    <%= form.label :biography, class: "text-blue-700 font-medium" %>
    <%= form.rich_text_area :biography, class: "block shadow-md rounded-md border border-blue-200 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="flex justify-start space-x-4 mt-6">
  <%= form.submit "Save", class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer hover:bg-blue-700 transition-colors duration-300" %>
  <%= link_to "Back", artists_path, class: "rounded-lg py-3 px-5 bg-yellow-500 text-white font-medium cursor-pointer hover:bg-yellow-600 transition-colors duration-300" %>
</div>

<% end %>
