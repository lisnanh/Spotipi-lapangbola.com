<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Playlists" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Playlists</h1>
    <%= link_to "New playlist", new_client_playlist_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="playlists" class="container mx-auto mt-8">
  <% if current_user.playlists.present? %>
    <% current_user.playlists.each do |playlist| %>
      <div class="playlist-item mb-4">
        <p>
          <%= link_to client_playlist_path(playlist), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
            Hem
            <%end%>
        </p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">No playlists available. Create your first playlist to start your music journey!</p>
  <% end %>
</div>

</div>


