<div id="<%= dom_id album %>" class="p-6 bg-blue-100 rounded-lg shadow-md border border-blue-200 mb-6">
  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">Title:</strong>
    <span class="text-gray-800"><%= album.title %></span>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">Song:</strong>
    <ul class="list-disc list-inside text-gray-800">
      <% album.songs.each do |song| %>
        <li><%= song.title %></li>
      <% end %>
    </ul>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">About:</strong>
    <span class="text-gray-800"><%= album.about %></span>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">Release:</strong>
    <span class="text-gray-800"><%= album.release %></span>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">Credit:</strong>
    <span class="text-gray-800"><%= album.credit %></span>
  </p>
</div>
